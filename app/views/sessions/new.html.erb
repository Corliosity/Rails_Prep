<%= form_tag sessions_path do %>
  <p id="notice"><%= notice %></p>
  <p>
    <%= label_tag :email, 'E-mail' %>
    <%= text_field_tag :email, params[:email] %>
  </p>
  
  <p>
    <%= label_tag :password, 'Password' %>
    <%= password_field_tag :password %>
  </p>
  
  <p>
    <%= submit_tag "Login" %>
  </p>
<% end %>